<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ziel des Spiel ist es, so viele Objekte wie möglich unterhalb
der roten Todeslinie zu platzieren.\nSobald 1 Objekt die Todeslinie in Teilen überschreite
ist das Spiel vorüber.\n3 mal ist durch einfaches Tippen auf den Bildschirm eine Bombe
aktivierbar.\nDurch ihre gewaltige Explosion werden alte Elemente zerstört, zählen jedoch
für den Punktestand."
        android:textColor="#FFFFFF"
        android:textSize="12pt"
        tools:ignore="HardcodedText,MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/anleitungHeader"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="174dp" />
    <TextView
        android:id="@+id/anleitungHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/anleitungHeader"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="20pt"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="43dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
